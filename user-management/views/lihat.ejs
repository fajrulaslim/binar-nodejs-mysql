<%- include('partials/header') %>
<%- include('partials/navigation') %>

<section class="mt-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1><%= title %></h1>
                <form class="mt-5">
                    <div class="form-group row">
                        <label for="nama" class="col-sm-2 col-form-label">Nama</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control text-uppercase" id="nama" value="<%= data.nama %>"
                                readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="jabatan" class="col-sm-2 col-form-label">Jabatan</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="jabatan" value="<%= data.jabatan %>" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="divisi" class="col-sm-2 col-form-label">Divisi</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="divisi" value="<%= data.divisi %>" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="userid" class="col-sm-2 col-form-label">User Id</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="<%= data.userid %>" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="alamat" class="col-sm-2 col-form-label">Alamat</label>
                        <div class="col-sm-10">
                            <textarea id="alamat" cols="30" rows="7" class="form-control"
                                readonly><%= data.alamat %></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <input type="hidden" id="tanggal_hidden" value="<%= data.tanggal %>">
                        <label for="tanggal" class="col-sm-2 col-form-label">Tanggal</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="tanggal" readonly>
                        </div>
                    </div>
                    <div class="form-group row justify-content-end">
                        <div class="col-sm-10 ">
                            <a href="/" class="btn btn-outline-secondary">Kembali</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

<script>
    let dt = document.getElementById('tanggal_hidden').value;
    let date = new Date(parseInt(dt));
    let hari = date.getDate();
    let bulan = date.getMonth() + 1;
    let tahun = date.getFullYear();
    document.getElementById('tanggal').value = hari + '/' + bulan + '/' + tahun;
</script>

<%- include('partials/footer') %>